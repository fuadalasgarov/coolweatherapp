<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoolWeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="background">@color/purple_200</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">18sp </item>
        <item name="android:textStyle">bold </item>

    </style>
    <style name="Theme.Day" parent ="Theme.CoolWeatherApp">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>
    <style name="Theme.Day.Land" parent ="Theme.CoolWeatherApp">
        <item name="android:windowBackground">@drawable/landbgimage</item>
    </style>
</resources>